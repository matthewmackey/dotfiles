# Set ticking sound from range of 1-10
pomovol() {
  local _tick_level=$1
  local _tick_percent=$(($_tick_level * 0.1))
  gsettings set org.gnome.pomodoro.plugins.sounds ticking-sound-volume $_tick_percent
}

alias pvol="pomovol"
alias pv="pomovol"

for i in {0..10}; do
  alias pv$i="pomovol $i"
done


